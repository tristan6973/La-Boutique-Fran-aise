{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - CousBeldi{% endblock %}

{% block content %}
    <div class="block-small">
        <form method="post">

            <h1 class="h3 mb-3 font-weight-normal">Réinitialiser mon mot de passe</h1>

            {% for message in app.flashes('notice') %}
                <div class="alert alert-warning">{{ message }}</div>
            {% endfor %}

            <label for="inputEmail">Email</label>
            <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <br/>
            <button class="btn btn-lg btn-warning col-12 " type="submit">
                Valider
            </button>
            <hr/>
            <p class="text-center">Ou souhaitez-vous <a href="{{ path('app_login') }}">vous connectez</a> ?</p>
        </form>
    </div>
{% endblock %}
